	<div id="hero-image-single" style="background-image: url('/images/{{movie.movie_poster}}')">
		<h1 id="hero-title">MOVIE DETAILS</h1>
		
	</div>

	<div class="content-padding clearfix">

		<div>
			<h3 id="hero-title">{{ movie.movie_title}}</h3>
		</div>

		<div class="poster-wrapper">
			<img src="/images/{{movie.movie_poster}}" class="img-responsive">
		</div>

		<div class="description-wrapper">

			<div class="description">
				<h2 class="movie-header">Description</h2>
				<p>{{ movie.description }}</p>
			</div>

			<div class="main-characters">
				<h2 class="movie-header">Main Characters</h2>
				<ul>
					<li>{{ movie.main_characters}}</li>
				</ul>
			</div>

			<div class="col-md-6">
	   	        <button class="btn btn-info" type="submit"><a href="/bookmovie">Book Movie</a></button>
	   	    </div>
		</div>

	</div>

